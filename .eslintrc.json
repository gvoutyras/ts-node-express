{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style":"off",
        "quotes": ["error", "double", {"allowTemplateLiterals": true}],
        "no-multiple-empty-lines": "off",
        "eol-last":["off", "never"],
        "indent": ["error", 2],
        "new-cap": ["error", { "properties": false }],
        "implicit-arrow-linebreak": "off",
        "object-curly-newline": "off",
        "curly":"off",
        "no-restricted-syntax":"off",
        "no-plusplus":"off",
        "nonblock-statement-body-position": "off"
    },
    "settings": {
        "import/resolver": {
            "alias": {
              "map": [["@models", "./models"], ["@utilities", "./src/utilities"], ["@middlewares", "./src/middlewares"]],
              "extensions": [".ts", ".js", ".jsx", ".json"]
            }
          }
    },
}
